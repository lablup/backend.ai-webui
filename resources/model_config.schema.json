{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "sorting": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "talkativot" : {
            "type": "object",
            "properties": {
                "title": {
                    "type": "string"
                },
                "src": {
                    "type": "string"
                }
            },
            "required": ["title", "src"]
        },
        "models": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "serviceName": {
                        "type": "string"
                    },
                    "environments": {
                        "type": "object",
                        "properties": {
                            "image": {
                                "type": "object",
                                "properties": {
                                    "registry": {
                                        "type": "string"
                                    },
                                    "name": {
                                        "type": "string"
                                    },
                                    "tag": {
                                        "type": "string"
                                    }
                                },
                                "required": ["registry", "name", "tag"]
                            },
                            "architecture": {
                                "type": "string"
                            },
                            "environment": {
                                "type": "string"
                            },
                            "version": {
                                "type": "string"
                            }
                        },
                        "required": ["registry", "name", "tag", "architecture", "version"]
                    },
                    "runtimeVariant": {
                        "type": "string"
                    },
                    "cluster_size": {
                        "type": "integer"
                    },
                    "cluster_mode": {
                        "type": "string"
                    },
                    "openToPublic": {
                        "type": "boolean"
                    },
                    "resource": {
                        "type": "object",
                        "properties": {
                            "cpu": {
                                "type": "integer"
                            },
                            "mem": {
                                "type": "string"
                            },
                            "accelerator": {
                                "type": "integer"
                            },
                            "acceleratorType": {
                                "type": "string"
                            },
                            "shmem": {
                                "type": "string"
                            }
                        },
                        "required": ["cpu", "mem", "accelerator", "acceleratorType", "shmem"]
                    },
                    "envvars": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "variable": {
                                    "type": "string"
                                },
                                "value": {
                                    "type": "string"
                                }
                            },
                            "required": ["variable", "value"]
                        }
                    },
                    "enabledAutomaticShmem": {
                        "type": "boolean"
                    }
                },
                "required": [
                    "name",
                    "serviceName",
                    "environments",
                    "runtimeVariant",
                    "cluster_size",
                    "cluster_mode",
                    "openToPublic",
                    "resource",
                    "enabledAutomaticShmem"
                ]
            }
        }
    },
    "required": ["sorting", "models"]
}
