{
  "name": "backend.ai-ui",
  "version": "1.0.0",
  "private": true,
  "description": "Shared UI components for Backend.AI",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./dist/backend.ai-ui.js",
      "types": "./dist/index.d.ts"
    },
    "./dist/locale/*": {
      "import": "./dist/locale/*.js",
      "types": "./dist/locale/*.d.ts"
    }
  },
  "files": [
    "dist",
    "dist/locale"
  ],
  "scripts": {
    "dev": "vite build --watch --mode development",
    "build": "vite build",
    "test": "NODE_OPTIONS='--no-deprecation' jest",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "lint": "eslint ./src --ignore-pattern '*.test.*' --ignore-pattern '**.graphql.**' --max-warnings=0"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "plugin:storybook/recommended",
      "plugin:react/recommended"
    ],
    "plugins": [
      "json-schema-validator"
    ],
    "overrides": [
      {
        "files": [
          "src/locale/*.json"
        ],
        "parser": "jsonc-eslint-parser",
        "extends": [
          "plugin:json-schema-validator/recommended"
        ]
      }
    ],
    "rules": {
      "react/react-in-jsx-scope": "off",
      "react/prop-types": "off",
      "import/no-duplicates": "error"
    }
  },
  "peerDependencies": {
    "@ant-design/icons": "^5.6.1",
    "ahooks": "^3.8.4",
    "antd": "^5.24.5",
    "big.js": "^7.0.1",
    "dayjs": "^1.11.13",
    "antd-style": "^3.7.1",
    "classnames": "^2.5.1",
    "graphql": "^16.10.0",
    "i18next": "^24.2.3",
    "lodash": "^4.17.21",
    "lucide-react": "^0.484.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-i18next": "^15.4.1",
    "react-relay": "^20.1.0",
    "relay-runtime": "^20.1.0",
    "react-resizable": "^3.0.5"
  },
  "devDependencies": {
    "@jest/expect": "30.0.0-beta.3",
    "@jest/globals": "30.0.0-beta.3",
    "@storybook/addon-docs": "^9.0.0",
    "@storybook/addon-essentials": "^8.4.5",
    "@storybook/addon-interactions": "^8.4.5",
    "@storybook/addon-links": "^8.4.5",
    "@storybook/addon-onboarding": "^9.0.0",
    "@storybook/react-vite": "^9.0.0",
    "@testing-library/react": "^16.2.0",
    "@types/big.js": "^6.2.2",
    "@types/lodash": "^4.17.13",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.3",
    "@types/react-relay": "^18.2.1",
    "@types/react-resizable": "^3.0.8",
    "@vitejs/plugin-react": "^4.5.0",
    "ahooks": "^3.8.4",
    "dayjs": "^1.11.13",
    "eslint": "^8.57.1",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-storybook": "^9.0.0",
    "fast-glob": "^3.3.3",
    "graphql": "^16.10.0",
    "jest": "^29.7.0",
    "storybook": "^9.0.0",
    "ts-jest": "^29.2.5",
    "tus-js-client": "^4.1.0",
    "typescript": "^5.7.2",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-relay-lite": "^0.11.0",
    "vite-plugin-svgr": "^4.3.0"
  },
  "type": "module",
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "extensionsToTreatAsEsm": [
      ".ts",
      ".tsx"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": [
        "ts-jest",
        {
          "useESM": true,
          "tsconfig": {
            "jsx": "react-jsx"
          }
        }
      ]
    }
  }
}
