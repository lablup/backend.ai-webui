{
  "name": "backend.ai-ui",
  "version": "25.18.0",
  "description": "React components for Backend.AI",
  "repository": {
    "type": "git",
    "url": "https://github.com/lablup/backend.ai-webui/tree/main/packages/backend.ai-ui"
  },
  "bugs": {
    "url": "https://github.com/lablup/backend.ai-webui/issues"
  },
  "author": "Lablup Inc. <contact@lablup.com>",
  "license": "LGPL-3.0-or-later",
  "keywords": [
    "backend.ai",
    "component",
    "react"
  ],
  "main": "./dist/backend.ai-ui.js",
  "module": "./dist/backend.ai-ui.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./dist/backend.ai-ui.js",
      "types": "./dist/index.d.ts"
    },
    "./dist/locale/*": {
      "import": "./dist/locale/*.js",
      "types": "./dist/locale/*.d.ts"
    }
  },
  "files": [
    "dist",
    "dist/locale"
  ],
  "scripts": {
    "dev": "vite build --watch --mode development",
    "build": "vite build",
    "test": "NODE_OPTIONS='--no-deprecation' jest",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "lint": "eslint ./src --ignore-pattern '**.graphql.**' --max-warnings=0",
    "prepublishOnly": "pnpm lint && pnpm test && pnpm build"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended"
    ],
    "plugins": [
      "json-schema-validator",
      "react-hooks",
      "import"
    ],
    "overrides": [
      {
        "files": [
          "src/locale/*.json"
        ],
        "parser": "jsonc-eslint-parser",
        "extends": [
          "plugin:json-schema-validator/recommended"
        ]
      },
      {
        "files": [
          "**/*.stories.tsx"
        ],
        "rules": {
          "react-hooks/rules-of-hooks": "off"
        }
      },
      {
        "files": [
          "**/*.test.*",
          "**/*.stories.*"
        ],
        "rules": {
          "no-console": "off"
        }
      }
    ],
    "rules": {
      "react/react-in-jsx-scope": "off",
      "react/prop-types": "off",
      "import/no-duplicates": "error",
      "no-useless-catch": "off",
      "prefer-promise-reject-errors": "off",
      "func-call-spacing": "off",
      "@typescript-eslint/no-unused-vars": [
        "warn",
        {
          "args": "all",
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_"
        }
      ],
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": [
        "warn",
        {
          "additionalHooks": "useRecoilCallback"
        }
      ],
      "no-console": [
        "warn"
      ]
    }
  },
  "peerDependencies": {
    "@ant-design/icons": "^5.6.1",
    "@tanstack/react-query": "^5.90.6",
    "ahooks": "^3.9.5",
    "antd": "^5.28.0",
    "antd-style": "^3.7.1",
    "graphql": "^16.12.0",
    "i18next": "^25.6.0",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-i18next": "^16.0.1",
    "react-relay": "^20.1.1",
    "react-router-dom": "^6.30.2",
    "relay-runtime": "^20.1.1"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "big.js": "^7.0.1",
    "classnames": "^2.5.1",
    "dayjs": "^1.11.18",
    "lodash": "^4.17.21",
    "lucide-react": "^0.552.0",
    "react-copy-to-clipboard": "^5.1.0",
    "react-draggable": "^4.5.0",
    "react-resizable": "^3.0.5"
  },
  "devDependencies": {
    "@jest/expect": "30.2.0",
    "@jest/globals": "30.2.0",
    "@storybook/addon-docs": "^9.1.1",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-links": "^9.1.1",
    "@storybook/addon-onboarding": "^9.1.1",
    "@storybook/react-vite": "^9.1.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/big.js": "^6.2.2",
    "@types/lodash": "^4.17.20",
    "@types/react": "^19.2.2",
    "@types/react-copy-to-clipboard": "^5.0.7",
    "@types/react-dom": "^19.2.2",
    "@types/react-relay": "^18.2.1",
    "@types/react-resizable": "^3.0.8",
    "@types/relay-runtime": "^19.0.3",
    "@types/relay-test-utils": "^19.0.0",
    "@vitejs/plugin-react": "^4.7.0",
    "babel-plugin-react-compiler": "^1.0.0",
    "eslint": "^8.57.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^7.0.0",
    "eslint-plugin-storybook": "^9.1.1",
    "fast-glob": "^3.3.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier-plugin-sort-json": "^4.1.1",
    "relay-test-utils": "^20.1.1",
    "storybook": "^9.1.1",
    "ts-jest": "^29.2.5",
    "typescript": "^5.8.2",
    "vite": "^6.4.1",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-relay-lite": "^0.11.0",
    "vite-plugin-svgr": "^4.3.0"
  },
  "type": "module",
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "extensionsToTreatAsEsm": [
      ".ts",
      ".tsx"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": [
        "ts-jest",
        {
          "useESM": true,
          "tsconfig": {
            "jsx": "react-jsx"
          }
        }
      ]
    },
    "setupFilesAfterEnv": [
      "./setupTests.ts"
    ],
    "testEnvironment": "jsdom"
  }
}
